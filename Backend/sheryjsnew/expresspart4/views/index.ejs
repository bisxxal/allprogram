<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="w-full h-screen bg-zinc-900">
        <div class="from p-10 text-white w-full"> 
            <form action="/create" method="post">
                <input class="block px-5 rounded-md w-full outline-none py-2 bg-zinc-800" type="text" placeholder="tittle goees here.." name="title">
                <textarea class="block rounded-md my-2 w-full outline-none px-5 py-2 bg-zinc-800 resize-none " placeholder="write your task here.." name="details" id="" ></textarea>
                <input class="bg-blue-600 px-5 py-2 rounded-md" type="submit" value="Create task">    
            </form>
        </div>

        <div class="tasks flex flex-wrap gap-4 p-10">

            <% if(files.length > 0 ) { %>

                    <% files.forEach((val)=>{ %>
                        <div class="task   w-72 px-3 py-4 rounded-md bg-zinc-800 ">
                            <h1 class=" text-white text-xl"><%= val %></h1>
                             <div class="flex justify-between ">
                                <a class="text-blue-600" href="/files/<%= val %>">Read more</a>        
                             <a class="text-red-600" href="/edit/<%= val %>">Edit filename</a>        
                             </div>
                        </div>
                          
                    <% })%>
          <% } else{ %>

                <h3 class="text-zinc-600">NO task</h3>
            <% } %>

             

            </div>
    </div>
</body>
</html>